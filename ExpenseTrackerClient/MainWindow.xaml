<Window x:Class="ExpenseTrackerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Expense Tracker" Height="450" Width="800" >
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/firstPage.png"/>
        </Grid.Background>
        
        <Canvas>
            <Button Content="Зарегистрироваться" Width="190" Height="50" Margin="15,130" 
                    Canvas.Right="90" Canvas.Bottom="93" 
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="RegisterButton_Click"/>
        </Canvas>
        <Canvas>
            <Button Content="Войти" Width="190" Height="50" Margin="15,130" 
                    Canvas.Right="90" Canvas.Bottom="-12" 
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="LoginButton_Click"/>
        </Canvas>
    </Grid> 
</Window>
