<Window x:Class="ExpenseTrackerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Expense Tracker" Height="450" Width="800" >
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/firstPage.png"/>
        </Grid.Background>
        <Canvas>
            <Canvas.RenderTransform>
                <ScaleTransform x:Name="ScaleTransform"/>
            </Canvas.RenderTransform>
                <Button Content="Зарегистрироваться" Width="190" Height="50" Margin="15,130" 
                        Canvas.Right="90" Canvas.Bottom="94" 
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="RegisterButton_Click"/>
                <Button Content="Войти" Width="190" Height="50" Margin="15,130" 
                    Canvas.Right="90" Canvas.Bottom="-13" 
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="LoginButton_Click"/>
            </Canvas>
    </Grid> 
</Window>
