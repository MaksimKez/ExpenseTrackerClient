<Window x:Class="ExpenseTrackerClient.SortCriteriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ExpenseTrackerClient"
        mc:Ignorable="d"
        Background="PaleTurquoise"
        Title="SortCriteriaWindow" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Выберите критерий сортировки:" />
            <ComboBox x:Name="criteriaComboBox" Width="200" Margin="10">
                <ComboBoxItem Content="Дата" />
                <ComboBoxItem Content="Категория" />
                <ComboBoxItem Content="Сумма" />
            </ComboBox>
                <Button Content="Sort Incomes" Width="100" Click="SortIncomesButton_Click" /> 
                <Button Content="Sort Expenses" Width="100" Click="SortExpensesButton_Click" />
        </StackPanel>
    </Grid>
</Window>
